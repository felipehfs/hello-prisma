generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id       Int     @default(autoincrement()) @id
  email    String  @unique
  name     String?
  password String
  task     Task[]
}

model Task {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now())
  finished  Boolean  @default(false)
  title     String
  authorId  Int
  User      User     @relation(fields: [authorId], references: [id])
}
